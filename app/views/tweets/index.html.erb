<%= stylesheet_link_tag 'index', :media => "all" %>
<div class = "tweets-container">
 <div class = "tback1">
  <div class = "tbg-text">
  <div class = "tbg-text1">
   <h1>たかけいの"イマ"を知る</h1>
   <h1>みんなでつくるサイト</h1>
  </div>
  </div>
 </div>
</div>

<div class = "t-presecond">
 <div class = "tsecond">
  <div class = "t21">
   
   <h3>投稿を検索</h3>
   <%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'%>
   <% end %>
   </div> 
   <div class = "t22">
   <% if user_signed_in? %>
   <%= link_to "マイページへ", user_path(current_user.id) %>
   <br>
   <%= link_to "投稿はこちら", new_tweet_path %>
   <% end %>
   </div>
  </div>
  
   
   <h2>Tweet一覧</h2>
   <div class="tforth">
      <% @tweets.each do |t| %>
       <div class="tmain-box">
        <div class="left-container">
         <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>
         <%= t.about_tweets %>
         <br>
         <%= t.potision_tweets %>
        </div>

        <div class="right-container">
          <% if user_signed_in? %>
          <% if current_user.already_liked?(t) %>
          <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
          <i class="fas fa-star"></i><%= t.likes.count %>
          <% end %>
          <% else %>
          <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id), method: :post do %>
          <i class="far fa-star"></i><%= t.likes.count %>
          <% end %>
          <% end %>
          <% else %>
          <i class="far fa-star"></i><%= t.likes.count %>
          <% end %>
          <%= link_to "詳細", tweet_path(t.id) %>
          <% if user_signed_in? && current_user.id == t.user_id %>
          <%= link_to "編集", edit_tweet_path(t.id) %>
          <%= link_to "削除", tweet_path(t.id), method: :delete %>
          <% end %>
        </div>
       
        <p class="time"><%= t.created_at %></p>
       </div>
      <% end %>
  </div>
</div>


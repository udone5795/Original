<%= stylesheet_link_tag 'emypage', :media => "all" %>
<div class="econtainer">
<div class="etitle text-center pt-5">
<h2>編集</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div class="emain">
<div class="col-md-10">
  <div class="efirst">
  <div class="field pt-3">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "col-md-6 form-control" %>
  </div>
  </div>
  
  <div class="esecond">
  <div class="field pt-3">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true,class: "col-md-12 form-control" %>
  </div>
  </div>
  
  <div class="ethird">
  <div class="field pt-3">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "col-md-10 form-control"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  </div>

  <div class="efour">
  <div class="field pt-3">
    <%= f.label :変更後のpassword %> <i>( 変更しない場合は空欄 )</i><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "col-md-10 form-control"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  </div>

  <div class="efifth">
  <div class="field pt-3">
    <%= f.label :確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "col-md-10 form-control" %>
  </div>

  <div class="field pt-3">
    <%= f.label :現在の（もしくは変更前のpassword） %> <i>変更完了を確認するため入力してください</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class: "col-md-10 form-control" %>
  </div>
  </div>

  <div class="eactions pt-3">
    <%= f.submit "Update",class: "btn btn-primary" %>
  </div>
 <% end %>
</div>

<div class="edb pt-5">
<div class="edelete pt-3">
<h3>アカウントの削除</h3>
<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,class: "btn btn-primary"%>
</div>

<div class="eback pt-3">
<h3>編集をやめる</h3>
<%= link_to "戻る", tweets_path ,class: "btn btn-primary"%>
</div>
</div>
</div>
</div>
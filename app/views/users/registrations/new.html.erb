<%= stylesheet_link_tag 'newac', :media => "all" %>
<div class="main">
  
   <div class="container">
   <h2 class="text-center pt-3">新規登録</h2>
    <div class="row">
     <div class="col-md-4">
   
   </div>
   
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "users/shared/error_messages", resource: resource %>
   
   </div>
   <div class="field pt-3">
    <%= f.label :アカウント名（本名はさけるべし）%><br />
    <%= f.text_field :name, autofocus: true,  class: "col-md-4 form-control" %>
   </div>
   
   <div class="field pt-3">
    <%= f.label :email（大学メールのみ） %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "col-md-7 form-control" %>
   </div>

   <div class="field pt-3">
    <%= f.label :password（アルファベット、六文字以上）%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",  class: "col-md-7 form-control" %>
   </div>

   <div class="field pt-3">
    <%= f.label :password（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "col-md-7 form-control" %>
   </div>

   <div class="actions pt-3">
    <%= f.submit "登録",class: "btn btn-primary" %><br>
    <%= render "users/shared/links" %>
   </div>
   

   <div class="col-md-4">

   </div>
  </div>
 </div>
</div>
<% end %>


